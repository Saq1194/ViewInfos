<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="#303F9F" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="M"
        android:textColor="#FAFAFA"
        android:textSize="35sp"
        android:gravity="center|end"
        android:layout_marginEnd="10dp" />
    <TextView
        android:id="@+id/f_name1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Full Name"
        android:textSize="15sp"
        android:textColor="#FAFAFA"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/name1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="John Smith"
        android:textSize="30sp"
        android:textColor="#FAFAFA"
        android:gravity="center"
        android:layout_alignBottom="@+id/f_name1"
        />


    <TextView
        android:id="@+id/firstScroll"
        android:layout_marginStart="100dp"
        android:text="This is the picture of John"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="190dp"
        android:textColor="#FAFAFA"
        android:layout_height="200dp"
        android:layout_below="@+id/view1"
        android:background="#303F9F"
        android:visibility="gone"
        android:layout_centerHorizontal="true"

        />




    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:layout_below="@+id/firstScroll"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="F"
        android:textColor="#FAFAFA"
        android:textSize="35sp"
        android:gravity="center|end"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/firstScroll"/>

    <TextView

        android:id="@+id/f_name2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Full Name"
        android:textSize="15sp"
        android:textColor="#FAFAFA"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/firstScroll"/>


    <TextView
        android:id="@+id/name2"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Sarah Jonson"
        android:textSize="30sp"
        android:textColor="#FAFAFA"
        android:layout_alignBottom="@+id/f_name2"
        android:gravity="center" />


    <TextView
        android:id="@+id/secondScroll"
        android:layout_below="@+id/view2"
        android:layout_marginStart="100dp"
        android:text="This is the picture of Sarah"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_width="190dp"
        android:textColor="#FAFAFA"
        android:layout_height="200dp"
        android:visibility="gone"
        android:background="@color/colorAccent"
        />


</RelativeLayout>

